{
  "name": "ai-review-core",
  "version": "1.0.0",
  "description": "Core AI code review logic - platform agnostic",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./reviewer": {
      "require": "./dist/reviewer.js"
    },
    "./parseDiff": {
      "require": "./dist/parseDiff.js"
    },
    "./llm": {
      "require": "./dist/llm/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "babel src --out-dir dist --presets=@babel/preset-env",
    "build:esm": "babel src --out-dir dist --out-file-extension .mjs --presets=@babel/preset-env",
    "build:types": "jsdoc2md src/**/*.js > dist/types.md",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run build"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0", 
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.50.0",
    "jest": "^29.5.0",
    "jsdoc-to-markdown": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "ai",
    "code-review", 
    "llm",
    "openai",
    "diff-parser",
    "code-analysis"
  ],
  "author": "Farhan Nawaz <nawaz@adobe.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nawaz-adobe/ai-reviewer-core.git"
  },
  "bugs": {
    "url": "https://github.com/nawaz-adobe/ai-reviewer-core/issues"
  },
  "homepage": "https://github.com/nawaz-adobe/ai-reviewer-core#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "__tests__/fixtures/"
    ]
  }
}
